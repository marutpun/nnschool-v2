---
export interface Props {
  imgSrc: string;
  imgAlt: string;
  title: string;
  desc: string;
}

const { imgSrc, imgAlt, title, desc } = Astro.props;
---

<div class="max-w-full md:max-w-[33.33333%] px-4 w-full flex-[0_0_100%] md:flex-[0_0_33.33333%]">
  <div class="flex-col items-center flex">
    <img src={imgSrc} alt="" class="w-[200px] h-[200px]" />
  </div>
  <h3 class="text-xl text-center">{title}</h3>
  <p class="text-base text-center pb-4 md:pb-0">{desc}</p>
</div>
